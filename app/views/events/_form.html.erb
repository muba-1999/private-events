<%= simple_form_for(@event) do |f| %>
  <%= f.error_notification %>

  <div class="field">
    <div class="control">
      <%= f.input :title, label: "Event Title", input_html: {class: "input"},
      wrapper: false,
      label_html: {class: "label"},
      autofocus: true %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.input :description, label: "Description", input_html: {class: "textarea"},
      wrapper: false,
      label_html: {class: "label"},
      autofocus: true %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.input :date, label: "Date", input_html: {class: "date"},
      wrapper: false,
      label_html: {class: "label"},
      autofocus: true %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.input :location, label: "Location", input_html: {class: "input"},
      wrapper: false,
      label_html: {class: "label"},
      autofocus: true %>
    </div>
  </div>

    <%= f.submit :submit, class: "button is-primary"%>
<% end %>
